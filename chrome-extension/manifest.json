{
    "name": "Human-friendly FHIR",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
      "webRequest",
      "storage"
    ],
    "host_permissions": ["*://*/*", "<all_urls>"],    
    "options_ui": {
      "page": "src/options.html",
      "open_in_tab": false
    },
    "background": {
      "service_worker": "src/background.js",
      "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["src/content.js"],
            "run_at": "document_start"
        }
    ],    
    "web_accessible_resources": [
      {
        "resources": [ "src/static/*", "src/module_content.js", "src/styles.css", "src/options.js" ],
        "matches": [ "<all_urls>" ]
      }
    ],
    "icons": {
        "128": "icons/128.png",
        "64": "icons/64.png",
        "32": "icons/32.png",
        "16": "icons/16.png"
    }
  }